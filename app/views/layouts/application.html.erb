<!DOCTYPE html>
<html>
  <head>
    <title>PingPongApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'yield', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">PingPongApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item active">
            <% if logged_in? %>
              <%= link_to "Create Player", new_player_path, class: "nav-link" %>
            <% end %>
          </li>
          <li class="nav-item active">
            <% if logged_in? %>
              <%= link_to "Create Game", new_game_path, class: "nav-link" %>
            <% end %>
          </li>
          <li class="nav-item active">
            <% if logged_in? %>
              <%= link_to "View Games", games_path, class: "nav-link" %>
            <% end %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <% if !logged_in? %>
            <%= link_to "Signup", new_user_path, class: "btn btn-outline-success my-2 my-sm-0" %>
          <% end %>
          <% if !logged_in? %>
            <%= link_to "Login", login_path, class: "btn btn-outline-success my-2 my-sm-0" %>
          <% else %>
            <%= link_to "Logout", sessions_path , method: :delete, class: "btn btn-outline-success my-2 my-sm-0" %>
          <% end %>
        </form>
      </div>
    </nav>
    <div class="bg">
      <div class="yield-body">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
