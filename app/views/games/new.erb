<%=form_for @game do |f|%>
  <%=f.text_field :location, placeholder: "Location"%>
  Ranked: <%=f.check_box :ranked, checked: true %>
  <%= f.fields_for :player_games do | playergame_form | %>
    <%= playergame_form.select :player_id, Player.all.collect { |p| [ p.alias, p.id ] } %>
    <%= playergame_form.text_field :score, placeholder: "Score" %>
  <% end %>
  <%=f.submit%>
<%end%>
